<h1>
        ConnectX / <%= title %>
</h1>

<section id="feed-posts">
        <h4>Posts</h4>
        <!-- form should only be visible to signed in user -->
        <%if(locals.user){ %>
        <form action="./posts/create" id="new-post-form" method="post">
                <textarea name="content" cols="30" rows="3" placeholder="What do you want to talk about?"></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>
        <div id="posts-list-container">
        <ul>
                <% for(post of posts){%>
                  <p>
                        <li>
                        <%= post.content %> 
                        <br><%= post.user.name %>
                        </li>      
                  </p>
                        
                        
                        
                        <%}%>

        </ul>
        </div>
</section>

      